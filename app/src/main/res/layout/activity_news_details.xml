<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/view_margin"
    android:layout_marginLeft="@dimen/view_margin"
    android:layout_marginTop="@dimen/view_margin"
    android:layout_marginBottom="@dimen/view_margin"
    tools:context="com.course.innopolis.lentaviewer.app.NewsDetailsActivity">

    <TextView
        android:id="@+id/news_pubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_pubDate" />
        />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/view_item_margin"
        android:textAppearance="@style/TextAppearance.Sb"/>

    <ImageView
        android:id="@+id/news_photo"
        android:maxWidth="@dimen/image_size"
        android:maxHeight="@dimen/image_size"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine" />


</LinearLayout>
